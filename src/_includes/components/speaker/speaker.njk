<article class="c-speaker">
  <figure>
    <img src="{{ params.data.image }}" alt="{{ params.data.name }}" loading="lazy" />
  </figure>
  <div class="c-speaker__content">
    <h2>{{ params.data.title }}</h2>
    <h3>{{ params.data.profession }}</h3>
    <div class="c-speaker__bio u-flow--10 o-links">{{ params.content | safe }}</div>
    <ul class="c-speaker__links">
      {% for item in params.data.links %}
        <li class="o-links">
          <a href="{{ item.url }}">
            {% if item.type == 'linkedin' %}
              <svg fill="none" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 21"><path d="M18.5.5h-17C.7.5 0 1.1 0 1.9v17.2c0 .8.7 1.4 1.5 1.4h17c.8 0 1.5-.6 1.5-1.4V1.9c0-.8-.7-1.4-1.5-1.4ZM6 17.5H3V8h3v9.5ZM4.4 6.7a1.7 1.7 0 1 1 0-3.4 1.7 1.7 0 0 1 0 3.4ZM17 17.5h-3V13c0-1.1 0-2.5-1.5-2.5s-1.7 1.2-1.7 2.4v4.7h-3V8h2.8v1.3c.5-.7 1.4-1.5 2.9-1.5 3 0 3.5 2 3.5 4.5v5.2Z" fill="currentColor"/></svg>
            {% endif %}
            {% if item.type == 'twitter' %}
              <svg fill="none" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 17"><path d="M15.3 0H18l-6.2 7.1 7.3 9.6h-5.7l-4.4-5.8-5 5.8H1.1l6.6-7.5L.8 0h5.8l4 5.3L15.3 0Zm-1 15h1.5L5.8 1.7H4L14.3 15Z" fill="currentColor"/></svg>
            {% endif %}
            {% if item.type == 'web' %}
              <svg fill="none" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 21"><path d="M10 19.13a8.63 8.63 0 1 0 0-17.26 8.63 8.63 0 0 0 0 17.25ZM1.38 10.5h17.25" stroke="currentColor" stroke-width="1.67" stroke-linecap="round" stroke-linejoin="round"/><path d="M13.32 10.5A14.9 14.9 0 0 1 10 19.13a14.9 14.9 0 0 1-3.32-8.63A14.9 14.9 0 0 1 10 1.87a14.9 14.9 0 0 1 3.32 8.63Z" stroke="currentColor" stroke-width="1.67" stroke-linecap="round" stroke-linejoin="round"/></svg>
            {% endif %}
            <span>{{ item.label }}</span>
          </a>
        </li>
      {% endfor %}
    </ul>
  </div>
</article>
