{%- from "components/component/component.njk" import c -%}
{% extends "layout.njk" %}

{% block inner %}

    {{ c('header', {
        title: title,
        event: event,
        intro: intro,
        isHome: true,
        navigation: navigation.header,
        currentUrl: page.url
    }) }}

    <main class="o-wrap o-wrap--home">
        {%- for p in collections.home | orderByOrder -%}
          {{ c(p.data.component, p | combine("speakers", collections.speakers | orderByOrder)) }}
        {%- endfor -%}
    </main>

    {{ c('footer', { navigation: navigation.footer, event: event, isHome: true }) }}

{% endblock %}
